<%#
  Team7 client ejs - course_more | Update: 2021/07/11
%>

<%- include( './_header.ejs' ); %>
<head>
  <link rel="preload" href="/public/css/style_edit_more.css" as="style">
  <link rel="stylesheet" href="/public/css/style_edit_more.css"">
  <title><%- title %></title>
</head>
<body>
  <%- include( './_top_bar.ejs' ); %>
  <div id="wrap">
    <%- include( './_dashboard.ejs' ); %>
  <div id="main">
    <div id="lecture_table">
      <h3><a id="prev_link" href="/main?p=course">コース</a> > <%- title %> 出欠一覧</h3>
      <div id="edit_fie">
        <p>開始時間 <input type="time" name="example" value="14:40" id="start_time"> &emsp; &emsp; 終了時間 <input type="time" name="example" value="16:10" id="end_time"> &emsp;</p>
        <p>出席限度 <input type="number" name="sample" id="attend_time"/> 分 &emsp; 遅刻限度 <input type="number" name="sample" id="late_time"/> 分</p>
        <p>試験
          <select name="exam" id="exam">
            <option>- 試験 -</option>
            <option value="false">なし</option>
            <option value="true">あり</option>
          </select>&emsp;
          曜日
          <select name="week" id="day_of_week">
            <option>- 曜日 -</option>
            <option value="Sun">日</option>
            <option value="Man">月</option>
            <option value="Tue">火</option>
            <option value="Wed">水</option>
            <option value="Thu">木</option>
            <option value="Fri">金</option>
            <option value="Sat">土</option>
          </select>&emsp; &emsp;
          講義回数 <input type="number" name="sample" id="weeks"/> &emsp;</p>
          <button id="apply">適用</button>
        </div>
      <table id="lecture_table_val">
        <%- lecture_table %>
      </table>
    </div>
    </div>
  </div>
</body>
</html>
